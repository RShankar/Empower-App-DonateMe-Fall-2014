<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_green" >

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/welcometxtview"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/welcometxtview"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/lasttxtview"
        android:layout_alignLeft="@+id/username" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/spinner1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/spinner2"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/stateedit"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stateedit"
        android:layout_below="@+id/stateedit"
        android:layout_marginTop="16dp"
        android:text="Brief description of your organization:"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_corners"
        android:text="Add Media"
        android:textSize="30sp" />

    <Button
        android:id="@+id/signupsubmit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/loginbutton"
        android:layout_alignBottom="@+id/loginbutton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:background="@drawable/round_corners1"
        android:text="@string/submit"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/welcometxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:text="Name of Org:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/lasttxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/welcometxtview"
        android:layout_below="@+id/welcometxtview"
        android:layout_marginTop="18dp"
        android:text="Type:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lasttxtview"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/username"
        android:text="Request:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="16dp"
        android:text="$ Goal:"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stateedit"
        android:layout_below="@+id/password"
        android:layout_marginTop="15dp"
        android:text="What is your request for?"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/howtohelpedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/howtohelptxtview"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@+id/textView4"
        android:text="Website:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/howtohelptxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/howtohelpedit"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="18dp"
        android:text="How to help:"
        android:textSize="30sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lasttxtview"
        android:layout_alignTop="@+id/textView7"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>
