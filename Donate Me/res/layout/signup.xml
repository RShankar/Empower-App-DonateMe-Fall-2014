<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E8B57" >

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/round_corners"
        android:text="@string/back"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/orgtypespinner"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/orgtypetxtview"
        android:visibility="invisible" />

     <TextView
         android:id="@+id/orgtypetxtview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/orgtypespinner"
         android:layout_alignLeft="@+id/logoutbutton"
         android:layout_marginLeft="27dp"
         android:text="Organization Type:"
         android:textSize="30sp"
         android:visibility="invisible" />

	<Button
	    android:id="@+id/signupsubmit"
	    android:layout_width="150dp"
	    android:layout_height="80dp"
	    android:layout_below="@+id/orgtypespinner"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="120dp"
	    android:background="@drawable/round_corners1"
	    android:text="@string/submit"
	    android:textSize="30sp" />

	<EditText
	    android:id="@+id/username"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/usernametxtview"
	    android:layout_alignLeft="@+id/orgtypespinner"
	    android:ems="10"
	    android:inputType="textPersonName" >

	    <requestFocus />
	</EditText>

	<EditText
	    android:id="@+id/password"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/passwordtxtview"
	    android:layout_alignLeft="@+id/username"
	    android:ems="10"
	    android:inputType="textPassword" />

	<EditText
	    android:id="@+id/orgname"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/orgnametxtview"
	    android:layout_alignLeft="@+id/orgtypespinner"
	    android:ems="10"
	    android:inputType="textPersonName"
	    android:visibility="invisible" />

	<TextView
	    android:id="@+id/orgnametxtview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/orgtypespinner"
	    android:layout_toLeftOf="@+id/orgtypespinner"
	    android:text="Organization Name:"
	    android:textSize="30sp"
	    android:visibility="invisible" />

	<TextView
	    android:id="@+id/usernametxtview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/logoutbutton"
	    android:layout_marginTop="60dp"
	    android:layout_toRightOf="@+id/logoutbutton"
	    android:text="Username:"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:textSize="30sp" />

	<TextView
	    android:id="@+id/passwordtxtview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/usernametxtview"
	    android:layout_below="@+id/usernametxtview"
	    android:layout_marginTop="34dp"
	    android:text="Password: "
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:textSize="30sp" />

	<CheckBox
	    android:id="@+id/isorgcheckbox"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/password"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="19dp"
	    android:text="This is an organization"
	    android:textSize="30sp" />

</RelativeLayout>