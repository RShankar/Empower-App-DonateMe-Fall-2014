<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_green" >

    <Button
        android:id="@+id/signupsubmit"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/round_corners"
        android:text="@string/random_act"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/signupsubmit"
        android:layout_alignTop="@+id/spinner1"
        android:layout_marginRight="24dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/signupsubmit"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_below="@+id/spinner1"
        android:layout_above="@+id/signupsubmit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.55" >
    </ListView>

</RelativeLayout>