<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:background="#00FF7F" >

    <TextView
        android:id="@+id/welcometxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Thanks!"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/lasttxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcometxtview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Thank you for your donation!"
        android:textSize="30sp" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="26dp"
        android:onClick="finishThanks"
        android:text="Ok"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/lasttxtview"
        android:layout_centerHorizontal="true"
        android:src="@drawable/share_facebook" />

</RelativeLayout>
